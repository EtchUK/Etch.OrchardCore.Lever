  "tags": [
      "search",
      "lever"
  ],
  "steps": [
    {
      "name": "Queries",
      "Queries": [
        {
          "Index": "ContentItems",
          "Template": "{\r\n    \"query\": {\r\n      \"bool\": {\r\n        \"must\" : [\r\n          { \"terms\" : { \"Content.ContentItem.ContentType\" : [\"LeverPosting\"] } },\r\n        ]\r\n      }\r\n    },\r\n    \"from\": {{ from }},\r\n    \"size\": {{ size }}\r\n}",
          "ReturnContentItems": true,
          "Name": "Lever",
          "Source": "Lucene",
          "Schema": "{\r\n    \"query\": {\r\n      \"bool\": {\r\n        \"must\" : [\r\n          { \"terms\" : { \"Content.ContentItem.ContentType\" : [\"LeverPosting\"] } },\r\n        ]\r\n      }\r\n    },\r\n    \"from\": {{ from }},\r\n    \"size\": {{ size }}\r\n}"
        }
      ]
    }
  ]
}